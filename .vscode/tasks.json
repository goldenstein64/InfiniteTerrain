{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "rojo build package.project.json -o InfiniteTerrain.rbxmx"
    },
    {
      "label": "Build to Plugin Folder (Windows)",
      "type": "shell",
      "group": "build",
      "command": "rojo build package.project.json -o $env:USERPROFILE/AppData/Local/Roblox/Plugins/InfiniteTerrain.rbxmx"
    },
    {
      "label": "Serve",
      "type": "shell",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "rojo serve default.project.json"
    }
  ]
}